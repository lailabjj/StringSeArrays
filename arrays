//inserir com prompt 3 valores numéricos em um array e printar a média;
const numeros = [];
alert("insira 3 números:");

numeros[0] = Number(prompt("numero 1"));
numeros[1] = Number(prompt("numero 2"));
numeros[2] = Number(prompt("numero 3"));

const media = (numeros[0] + numeros[1] + numeros[2] /3);
console.log(media);

