const listaDeTarefas = [];

alert("insira 3 tarefas necessárias no seu dia a dia:");
listaDeTarefas[0] = prompt ("tarefa 1:");
listaDeTarefas[1] = prompt ("tarefa 2:");
listaDeTarefas[2] = prompt ("tarefa 3:");

console.log("suas tarefas necessárias são:");
console.log(listaDeTarefas[0]);
console.log(listaDeTarefas[1]);
console.log(listaDeTarefas[2]);

const tarefasRealizadas = prompt("digite o índice de uma tarefa que ele já realizou: 0, 1 ou 2 ");
listaDeTarefas.splice(tarefasRealizadas, 1)




console.log(listaDeTarefas);
